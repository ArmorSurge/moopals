<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="colorContainer">@color/colorLightBackground</item>
        <item name="android:textColorPrimary">@color/material_text</item>
        <item name="android:textColorSecondary">@color/material_secondary_text</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:backgroundDimEnabled">false</item>

        <item name="popupTheme">@style/LightPopup</item>
        <item name="themedMoreDrawable">@drawable/ic_more_vert_black_24dp</item>
        <item name="themedEditDrawable">@drawable/ic_edit_black_24dp</item>
        <item name="themedDeleteDrawable">@drawable/ic_delete_black_24dp</item>
        <item name="themedChevronLeftDrawable">@drawable/ic_chevron_left_black</item>
        <item name="themedChevronRightDrawable">@drawable/ic_chevron_right_black</item>
        <item name="themedAccentedButton">@style/StyledAccentButtonLight</item>
        <item name="themedFlatButton">@style/StyledFlatButtonLight</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/material_grey900</item>
        <item name="colorPrimaryDark">@color/material_black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorContainer">@color/colorDarkBackground</item>
        <item name="android:textColorPrimary">@color/material_white</item>
        <item name="android:textColorSecondary">@color/material_white_secondary_text</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="popupTheme">@style/DarkPopup</item>
        <item name="themedMoreDrawable">@drawable/ic_more_vert_white_24dp</item>
        <item name="themedEditDrawable">@drawable/ic_edit_white_24dp</item>
        <item name="themedDeleteDrawable">@drawable/ic_delete_white_24dp</item>
        <item name="themedChevronLeftDrawable">@drawable/ic_chevron_left_white</item>
        <item name="themedChevronRightDrawable">@drawable/ic_chevron_right_white</item>
        <item name="themedAccentedButton">@style/StyledAccentButton</item>
        <item name="themedFlatButton">@style/StyledFlatButton</item>
    </style>

    <style name="AppThemeAmoled" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/material_black</item>
        <item name="colorPrimaryDark">@color/material_black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorContainer">#000000</item>
        <item name="android:textColorPrimary">@color/material_white</item>
        <item name="android:textColorSecondary">@color/material_white_secondary_text</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="popupTheme">@style/DarkPopup</item>
        <item name="themedMoreDrawable">@drawable/ic_more_vert_white_24dp</item>
        <item name="themedEditDrawable">@drawable/ic_edit_white_24dp</item>
        <item name="themedDeleteDrawable">@drawable/ic_delete_white_24dp</item>
        <item name="themedChevronLeftDrawable">@drawable/ic_chevron_left_white</item>
        <item name="themedChevronRightDrawable">@drawable/ic_chevron_right_white</item>
        <item name="themedAccentedButton">@style/StyledAccentButton</item>
        <item name="themedFlatButton">@style/StyledFlatButton</item>
    </style>

    <style name="AppThemeTimer" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/material_blue500</item>
        <item name="colorPrimaryDark">@color/material_blue700</item>
        <item name="colorAccent">@color/material_green500</item>
        <item name="android:textColorPrimary">@color/material_white</item>
        <item name="android:windowBackground">@color/material_blue500</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>
    </style>

    <style name="TimerToolbar" parent="Theme.AppCompat" >
        <item name="colorPrimary">@color/material_blue500</item>
        <item name="android:textColorSecondary">@color/material_white</item>
    </style>

    <style name="LightToolbar">
        <item name="android:textColorPrimary">@color/material_white</item>
        <item name="android:textColorSecondary">@color/material_white</item>
    </style>

    <style name="LightPopup" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/material_text</item>
        <item name="android:colorBackground">@color/material_white</item>
    </style>

    <style name="DarkPopup" parent="Theme.AppCompat">
        <item name="android:textColor">@color/material_white</item>
        <item name="android:colorBackground">@color/material_grey800</item>
    </style>

    <style name="StyledAccentButton" parent="Theme.AppCompat" >
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="StyledAccentButtonLight" parent="Theme.AppCompat" >
        <item name="colorButtonNormal">@color/colorAccentLight</item>
        <item name="colorControlHighlight">@color/colorAccentLight</item>
    </style>

    <style name="StyledFlatButton" parent="StyledAccentButton">

    </style>

    <style name="StyledFlatButtonLight" parent="Theme.AppCompat.Light" >
        <item name="colorButtonNormal">@color/colorAccentLight</item>
        <item name="colorControlHighlight">@color/colorAccentLight</item>
    </style>

    <style name="ButtonAccentedRed" parent="Theme.AppCompat.Light" >
        <item name="colorControlHighlight">@color/material_red500</item>
    </style>

</resources>